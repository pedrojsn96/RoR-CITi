                                
                    <div class="row">                        
                        <div class="col-md-6 col-md-offset-3">                            
                            <div class="form-box">
                                <div class="form-top">
                                    <div class="form-top-left">
                                        <h3>Cadastre a Disciplina</h3>
                                        <p>Realize o cadastro</p>
                                    </div>
                                    <div class="form-top-right">
                                        <i class="fa fa-pencil"></i>
                                    </div>
                                </div>
                                <div class="form-bottom">
                                   <%= form_for @disciplina do |f| %> 
                                        <% if @disciplina.errors.any? %> 
                                        <div id="error_explanation"> 
                                            <div class="alert-error"> 
                                                O formulário contém <%= pluralize(@disciplina.errors.count, "erro") %>. 
                                            </div> 
                                            <ul> 
                                                <% @disciplina.errors.full_messages.each do |msg| %>                                              
                                                <li><%= msg %></li> 
                                                <% end %> 
                                            </ul> 
                                        </div>
                                        <% end %>
                                    <% end %>
                                    
                                    <%= form_for :disciplina, url: disciplinas_path do |f| %>
                                        <p>
                                            <%= f.label :nome_da_disciplina %><br>
                                            <%= f.text_field :name %>
                                        </p>
                                        <p>
                                            <%= f.label :professor %><br>
                                            <%= f.text_field :name_prof %>
                                        </p>
                                        <p>
                                            <%= f.label :nota %><br>
                                            <%= f.range_field(:nota , in: 0..10)%>
                                        </p>
                                        <p>
                                            <%= f.label :comentário %><br>
                                            <%= f.text_area :comment %>
                                        </p>
                                        <p>
                                            <div class="actions"><%= f.submit "Cadastrar", class: 'btn'%></div>
                                        </p>
                                        <% end %>                           
                                </div>
                            </div>                            
                        </div>
                    </div><br>                    
